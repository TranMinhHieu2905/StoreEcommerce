@inherits LayoutComponentBase
<head>
    
    <title>StoreEcommerce</title>   
    <link href="css/layout.css" rel="stylesheet" />
     <link href="css/index.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<div class="page">
  
    <main>
         <div class="header layout_header">
             <div class="row background_layout" style="margin:0">   
                 <div class="col-2">
                      <a href="/" style="color:white;font-size:20px;margin-top: 50px;text-decoration: none;" class="fa fa-2x fa-home">TRANG CHỦ</a>
                 </div>
                  <div class="col-2">
                      <Dropdown>
                        <Overlay>
                            <Menu Style="width:180px;">
                                 <MenuItem>
                                    <a href="/adminsupplier">
                                      <span class="fa fa-cube selectitem">&nbsp;Nhà cung cấp</span>  
                                    </a>
                                </MenuItem>
                                <MenuItem>
                                    <a  href="/adminproduct">
                                      <span class="fa fa-cube selectitem">&nbsp;Quản Lý Sản Phẩm</span>  
                                    </a>
                                </MenuItem>
                                <MenuItem>
                                    <a  href="/admincate">
                                        <span class="fa fa-file selectitem">&nbsp;Danh Mục Sản Phẩm</span>                              
                                    </a>
                                </MenuItem>                               
                                 <MenuItem>
                                    <a  href="/adminTax">
                                        <span class="fa fa-building selectitem">&nbsp;Quản Lý Thuế</span>                              
                                    </a>
                                </MenuItem>
                                 <MenuItem>
                                    <a  href="/managerproduct">
                                        <span class="fa fa-building selectitem">&nbsp;Quản Lý Đơn Hàng</span>                              
                                    </a>
                                </MenuItem>
                            </Menu>
                        </Overlay>
                <ChildContent>               
                      <a style="color:white;font-size:20px;margin-top: 50px;text-decoration: none;" class="ant-dropdown-link fa fa-2x fa-cubes" @onclick:preventDefault>
                       DANH MỤC<Icon Type="down" />
                     </a>
                </ChildContent>
                    </Dropdown>
                  </div>
                  <div class="col-2">
                      <Dropdown>
                <Overlay>
                    <Menu Style="width:220px;">
                        <MenuItem>
                            <a href="/counter">
                                <span class="fa fa-dollar selectitem">&nbsp;Quản lý giá vận chuyển</span> 
                            </a>
                        </MenuItem>
                        <MenuItem>
                            <a href="/adminAdress">
                             <span class="fa fa-building selectitem">&nbsp;Quản lý địa chỉ</span> 
                            </a>
                        </MenuItem>
                        <MenuItem>
                            <a href="/adminType">
                                <span class="fa fa-btc selectitem">&nbsp;Phân loại vận chuyển</span> 
                            </a>
                        </MenuItem>
                    </Menu>
                </Overlay>
                <ChildContent>               
                      <a style="color:white;font-size:20px;margin-top: 50px;text-decoration: none;" class="ant-dropdown-link fa fa-2x fa-bus" @onclick:preventDefault>
                      VẬN CHUYỂN <Icon Type="down" />
                    </a>
                </ChildContent>
            </Dropdown>  
                  </div>
                   <div class="col-2">
                       <a href="/adminUser" style="color:white;font-size:20px;margin-top: 50px;text-decoration: none;" class="fa fa-2x fa-bar-chart">KHÁCH HÀNG</a> 
                   </div>
                    <div class="col-2">
                       <a style="color:white;font-size:20px;margin-top: 50px;text-decoration: none;" class="fa fa-2x fa-bar-chart" @onclick:preventDefault>THỐNG KÊ</a> 
                   </div>   
                    <div class="col-2">
                      <Dropdown>
                        <Overlay>
                            <Menu Style="width:220px;">                              
                                <MenuItem>
                                    <a target="_self" rel="noopener noreferrer" href="/adminAdress">
                                     <span class="fa fa-building selectitem">&nbsp;Quản lý địa chỉ</span> 
                                    </a>
                                </MenuItem>
                                <MenuItem>
                                    <a target="_self" rel="noopener noreferrer" href="http://www.tmall.com/">
                                        <span class="fa fa-btc selectitem">&nbsp;Phân loại vận chuyển</span> 
                                    </a>
                                </MenuItem>
                            </Menu>
                        </Overlay>
                        <ChildContent>               
                              <a style="color:white;font-size:20px;margin-top: 50px;text-decoration: none;" class="ant-dropdown-link fa fa-2x fa-bus" @onclick:preventDefault>
                              THÔNG BÁO <Icon Type="down" />
                            </a>
                        </ChildContent>
                    </Dropdown>  
                   </div>   
            </div>
        </div>
      
        <article class="content px-4" style="background-color: aliceblue;">
            @Body
        </article> 
        <div class="footer" style="background-color:darkgray;height:50px;margin-top:0px;">
            <p style="text-align:center;font-size: 20px;font-family: verdana;">PHÁT TRIỂN BỞI ANHTN</p>
        </div>
    </main>
</div>
@code{
    bool _visible = false;
    bool _loading = false;
    private string DefaultActiveKey = "1";
    private void ShowModal()
    {
        _visible = true;

    }
    private void ShowModal1()
    {

        _visible = true;   
        DefaultActiveKey = "2";
    }
    private async Task HandleOk(MouseEventArgs e)
    {
        _loading = true;
        await Task.Delay(3000);
        _visible = false;
        _loading = false;
    }

    private void HandleCancel(MouseEventArgs e)
    {
        DefaultActiveKey = "";
        _visible = false;
    }
    // Hide Show Pass
    public string TxtType = "password";
    public string type = "fa fa-eye-slash";

    public void ShowPassword()
    {
        if (this.TxtType == "password")
        {
            this.TxtType = "text";
            this.type = " fa fa-eye";
        }
        else
        {
            this.TxtType = "password";
            this.type = " fa fa-eye-slash";
        }
    }
}